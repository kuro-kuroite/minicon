<% if entity.errors.any? %>
  <div id="error-explanation">
    <div class="message message-alert">
      The form contains <%= pluralize(entity.errors.count, "error") %>:
    </div>
    <ul>
    <% entity.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>