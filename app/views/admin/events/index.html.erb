<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Location</th>
      <th>Start At</th>
      <th>Ticket Price</th>
      <th>Ticket Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <th><%= event.event_category.name %></th>
        <th><%= event.title %></th>
        <th><%= event.location %></th>
        <th><%= event.start_at.strftime('%Y/%m/%d %H:%M') %></th>
        <th><%= event.ticket_price %></th>
        <th><%= event.ticket_quantity %></th>
        <td><%= link_to 'Show', admin_event_path(event) %></td>
        <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
        <td><%= link_to 'Destroy', admin_event_path(event), method: :delete, data: { confirm: 'are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

